<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Map Fragment -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".map.MultiMapsActivity" />

    <!-- Legend Card at Top Right -->
    <androidx.cardview.widget.CardView
        android:id="@+id/legendCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:alpha="0.85"
        android:elevation="4dp"
        android:padding="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Total Pins Count -->
            <TextView
                android:id="@+id/tvTotalPins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_pins_info"
                android:textColor="#757575"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Green Pin Legend -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_green"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvGreenPins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/green_pin_info"
                    android:textColor="#757575"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Yellow Pin Legend -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_yellow"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvYellowPins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yellow_pin_color"
                    android:textColor="#757575"
                    android:textSize="11sp" />
            </LinearLayout>

            <!-- Red Pin Legend -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

            <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_red"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvRedPins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/red_pin_info"
                    android:textColor="#757575"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <View
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/circle_azure"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvAzurePins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/azure_pin_info"
                    android:textColor="#757575"
                    android:textSize="11sp" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>